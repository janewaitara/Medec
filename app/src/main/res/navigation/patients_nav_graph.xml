<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/patients_nav_graph.xml"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.janewaitara.medec.ui.patients.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_allDoctors"
            app:destination="@id/allDoctors" />
    </fragment>
    <fragment
        android:id="@+id/chatsFragment"
        android:name="com.janewaitara.medec.ui.patients.chats.ChatsFragment"
        android:label="fragment_chats"
        tools:layout="@layout/fragment_chats" />
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.janewaitara.medec.ui.patients.account.AccountFragment"
        android:label="fragment_account"
        tools:layout="@layout/fragment_account" />
    <fragment
        android:id="@+id/allDoctors"
        android:name="com.janewaitara.medec.ui.patients.allDoctors.AllDoctorsFragment"
        android:label="fragment_all_doctors"
        tools:layout="@layout/fragment_all_doctors" >
        <action
            android:id="@+id/action_allDoctors_to_chatMessagingFragment"
            app:destination="@id/chatMessagingFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatMessagingFragment"
        android:name="com.janewaitara.medec.ui.patients.chatMessaging.ChatMessagingFragment"
        android:label="fragment_chat_messaging"
        tools:layout="@layout/fragment_chat_messaging" >
        <argument
            android:name="messageRecipientId"
            app:argType="string" />
        <argument
            android:name="messageRecipientName"
            app:argType="string" />
        <argument
            android:name="messageRecipientProfilePictureUrl"
            app:argType="string" />
    </fragment>
</navigation>